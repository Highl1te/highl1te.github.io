# Environment Configuration
NODE_ENV=production  # or development

# Server Configuration
PORT=3000

# Frontend URL (for CORS)
FRONTEND_URL=https://your-domain.com  # or http://localhost:5173 for development

# Client API URL (what the frontend uses to connect to the backend)
VITE_API_URL=https://your-domain.com  # or http://localhost:3000 for development

# Database
DATABASE_URL=./apps/server/database.sqlite

# Discord OAuth Configuration
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here
DISCORD_REDIRECT_URI=https://your-domain.com/api/auth/discord/callback  # or http://localhost:3000/api/auth/discord/callback for development

# Session Secret (generate a random string - at least 32 characters)
SESSION_SECRET=your_session_secret_key_here_at_least_32_chars

# CORS Origins (allowed origins for your API)
CORS_ORIGIN=https://your-domain.com  # or http://localhost:5173 for development

# Discord Notifications (Optional)
# Set DISCORD_WEBHOOK_URL for channel notifications or DISCORD_BOT_TOKEN for DMs
DISCORD_WEBHOOK_URL=
DISCORD_BOT_TOKEN=
